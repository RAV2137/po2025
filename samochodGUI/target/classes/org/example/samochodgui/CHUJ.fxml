<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.samochodgui.HelloController"
      prefWidth="1200" prefHeight="700">

    <!-- GÓRA -->
    <HBox spacing="15" alignment="CENTER">
        <ComboBox fx:id="skrzyniaBox" promptText="Skrzynia"/>
        <ComboBox fx:id="silnikBox" promptText="Silnik"/>
        <ComboBox fx:id="sprzegloBox" promptText="Sprzęgło"/>
        <Button text="Dodaj samochód" onAction="#dodajSamochod"/>
    </HBox>

    <!-- DÓŁ -->
    <HBox spacing="20" alignment="CENTER">

        <!-- SKRZYNIA -->
        <VBox spacing="8" alignment="CENTER" prefWidth="220" style="-fx-border-color:black; -fx-padding:10;">
            <Label text="Skrzynia" style="-fx-font-weight:bold"/>
            <TextField fx:id="skrzyniaNazwa" promptText="Nazwa"/>
            <TextField fx:id="skrzyniaCena" promptText="Cena"/>
            <TextField fx:id="skrzyniaWaga" promptText="Waga"/>
            <TextField fx:id="skrzyniaMaxBieg" promptText="Max bieg"/>
            <Button text="Dodaj komponent" onAction="#dodajSkrzynie"/>
        </VBox>

        <!-- SILNIK -->
        <VBox spacing="8" alignment="CENTER" prefWidth="220" style="-fx-border-color:black; -fx-padding:10;">
            <Label text="Silnik" style="-fx-font-weight:bold"/>
            <TextField fx:id="silnikNazwa" promptText="Nazwa"/>
            <TextField fx:id="silnikCena" promptText="Cena"/>
            <TextField fx:id="silnikWaga" promptText="Waga"/>
            <TextField fx:id="silnikMaxObroty" promptText="Max obroty"/>
            <Button text="Dodaj komponent" onAction="#dodajSilnik"/>
        </VBox>

        <!-- SPRZĘGŁO -->
        <VBox spacing="8" alignment="CENTER" prefWidth="220" style="-fx-border-color:black; -fx-padding:10;">
            <Label text="Sprzęgło" style="-fx-font-weight:bold"/>
            <TextField fx:id="sprzegloNazwa" promptText="Nazwa"/>
            <TextField fx:id="sprzegloCena" promptText="Cena"/>
            <TextField fx:id="sprzegloWaga" promptText="Waga"/>
            <TextField fx:id="sprzegloStan" promptText="Stan"/>
            <Button text="Dodaj komponent" onAction="#dodajSprzeglo"/>
        </VBox>

    </HBox>
</VBox>
